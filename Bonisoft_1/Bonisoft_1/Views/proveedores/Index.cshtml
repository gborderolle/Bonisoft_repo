@model IEnumerable<Bonisoft_1.proveedor>

<p>
    @Html.ActionLink("Agregar", "Create", "Proveedores", null, null)
</p>
<table class="table">
    <tr>
        <th>
            Empresa
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentarios)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentarios)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.Proveedor_ID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Proveedor_ID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Proveedor_ID })
            </td>
        </tr>
    }

</table>
